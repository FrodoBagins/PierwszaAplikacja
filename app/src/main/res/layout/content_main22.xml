<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <Button
        android:layout_height="wrap_content"
        android:id="@+id/btnOpenNextActivity"
        android:layout_width="wrap_content"
        android:text="@string/btn_PreviousActivity"
        android:gravity="top|left"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/buttoncalculate"
        android:layout_toStartOf="@+id/buttoncalculate"></Button>

    <Button
        android:id="@+id/buttoncalculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_send"
        android:onClick="sendMessage"
        android:layout_marginRight="28dp"
        android:layout_marginEnd="28dp"
        android:layout_below="@+id/btnOpenNextActivity"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText android:id="@+id/editText1"

        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/edit_message"
        android:gravity="bottom|center_vertical"
        android:layout_below="@+id/btnOpenNextActivity"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp" />



</LinearLayout>