<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_weight="0.68"
        android:gravity="center_horizontal" />


    <Button
        android:layout_height="wrap_content"
        android:id="@+id/btnOpenNewActivity"
        android:layout_width="wrap_content"
        android:text="@string/btn_NewActivity"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="32dp"
        android:layout_marginEnd="32dp"></Button>

    <Button
        android:id="@+id/btnOpenNextActivity"
        android:layout_width="wrap_content"
        android:text="@string/btn_PreviousActivity"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/btnOpenNewActivity"
        android:layout_toStartOf="@+id/btnOpenNewActivity"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp"></Button>

    <ImageView
        android:id="@+id/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:foregroundGravity="bottom|left"
        android:adjustViewBounds="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>

